// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  uuid     String  @id @default(cuid())
  email    String  @unique
  fullName String
  password String
  photo    Bytes?
  phone    String?
}

model Vehicle {
  uuid        String   @id @default(cuid())
  slug        String   @unique
  vin         String
  make        String
  model       String
  bodyType    String?
  image       String?
  fuelType    String?
  horsePower  Int?
  description String?
  updatedAt   DateTime @updatedAt
  createdAt   DateTime @default(now())
  amount      Int?
  maxAmount   Int?
}
